<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/text_music_title_yet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:fontFamily="@font/bmjua"
        android:textSize="20dp"
        android:text="text_music_title_yet"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/text_music_date_yet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:fontFamily="@font/bmjua"
            android:textSize="18dp"
            android:text="text_music_date_yet"/>

        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/text_music_emotion_yet"
            android:background="@drawable/textbox2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorText"
            android:fontFamily="@font/bmjua"
            android:textSize="18dp"
            android:text="text_music_emotion_yet"/>

    </LinearLayout>

</LinearLayout>