<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_love"
    tools:context=".EmotionActivity">


    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/image_text_love"/>

    <ImageView
        android:id="@+id/image_text_love"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:background="@drawable/text_love"
        app:layout_constraintBottom_toTopOf="@+id/btn_music_love"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/space" />

    <Button
        android:id="@+id/btn_music_love"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        android:fontFamily="@font/bmjua"
        android:text="같이 듣기 좋은 노래"
        android:textColor="#ffffff"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/image_text_love"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>